<!-- Legend for the syntax

'@' - Alpha
'#' - Digit
' ' - space ('<')
'?' - space or digit
'$' - space or alpha
'^' - alpha or digit
'*' - anything
another symbol - itself
-->

<field_syntax_restrictions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="field_syntax_restrictions.xsd">
  <syntaxes_for_one_field field_name="DocNum">
